<form name="erp_property_payment_settings_properties" action="{{ path('erp_property_confirm_settings') }}">
    <div class="container-fluid">


        <table class="table">
            <thead>
            <tr>
                <td>Select All<input type="checkbox" name="all_elements"></td>
                <td>Property</td>
                <td>Address</td>
            </tr>
            </thead>
            <tbody>
            {% for property in properties %}
                <tr>
                    <td><input type="checkbox" name="idx[]" value="{{ property.id }}"></td>
                    <td>{{ property.name }}</td>
                    <td>{{ property.address }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="col-md-12">
            <button
                    class="btn edit-btn"
                    step="properties-settings"
                    role="back"
            >
                Back
            </button>
            <button
                    url="{{ path('erp_property_confirm_settings') }}"
                    type="submit"
                    class="btn edit-btn"
                    step="properties-confirmation"
            >
                Next
            </button>
        </div>
    </div>

</form>

