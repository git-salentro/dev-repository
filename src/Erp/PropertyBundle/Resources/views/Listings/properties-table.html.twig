<div id="properties-table">
    <form name="erp_property_payment_settings_properties" action="{{ path('erp_property_confirm_settings') }}">
        <table class="table">
            <thead>
            <tr>
                <td>Select All<input type="checkbox" name="all_elements"></td>
                <td>Property</td>
                <td>Address</td>
            </tr>
            </thead>
            <tbody>
            {% for property in properties %}
                <tr>
                    <td><input type="checkbox" name="idx[]" value="{{ property.id }}"></td>
                    <td>{{ property.name }}</td>
                    <td>{{ property.address }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <button
                href="{{ path('erp_property_confirm_settings') }}"
                type="submit"
                class="btn edit-btn"
                step="properties-confirmation"
        >
            Next
        </button>

    </form>
    <a
            class="btn edit-btn"
            type="submit"
            step="properties-settings"
            role="back"
    >
        Back
    </a>
</div>

