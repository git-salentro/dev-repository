{% import '::widgets/form_errors.html.twig' as form_custom_errors %}

{% form_theme form _self %}

{%- block date_widget -%}
    {% set type = 'text' %}
    {{ block('form_widget_simple') }}
{%- endblock date_widget -%}

<div class="col-md-3 col-xs-6 profile-widget-item widget-first">
    <div class="row widget-title-row">
        <div class="login-block-title bold-text">Pay Rent</div>
    </div>
    {{ form_start(form, {'action': path('erp_payment_stripe_pay_rent'), 'attr': {'class': 'pay-widget'}}) }}
        <div class="form-group col-xs-7">
            {{ form_widget(form.amount) }}
        </div>
        <div class="form-group col-xs-5 method-col">
            <label class="control-label">
                <span>Payment method:</span>
                <span class="method-name"></span>
            </label>
        </div>

        <div class="form-group col-xs-12 date-col">
            {{ form_widget(form.startPaymentAt) }}
        </div>
        <div class="form-footer col-xs-12">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.type) }}
                    {{ form_label(form.type) }}
                </label>
            </div>
            <div class="row edit-row">
                {{ form_widget(form.submit) }}
            </div>
        </div>
    {{ form_end(form) }}
</div>
