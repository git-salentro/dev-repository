{% import '::widgets/form_errors.html.twig' as form_custom_errors %}

{% set cc = constant('Erp\\PaymentBundle\\Entity\\StripeCustomer::CREDIT_CARD') %}

{{ form_start(form, { attr: {'class': 'form-horizontal cc-form ba-form', 'novalidate': 'novalidate'}, 'enctype': form_enctype(form)}) }}
    <div class="row">
        <div class="form-group">
            <div class="col-xs-6">
                {{ form_label(form.accountHolderName) }}
                {{ form_widget(form.accountHolderName) }}
                {{ form_custom_errors.widget(form.accountHolderName) }}
            </div>
            <div class="col-xs-6">
                {{ form_label(form.accountHolderType) }}
                <div class="select-container">
                    {{ form_widget(form.accountHolderType) }}
                </div>
                {{ form_custom_errors.widget(form.accountHolderType) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-xs-6">
                {{ form_label(form.accountNumber) }}
                {{ form_widget(form.accountNumber) }}
                {{ form_custom_errors.widget(form.accountNumber) }}
            </div>
            <div class="col-xs-6">
                {{ form_label(form.country) }}
                {{ form_widget(form.country) }}
                {{ form_custom_errors.widget(form.country) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-6">
                {{ form_label(form.currency) }}
                {{ form_widget(form.currency) }}
                {{ form_custom_errors.widget(form.currency) }}
            </div>
            <div class="col-xs-6">
                {{ form_label(form.routingNumber) }}
                {{ form_widget(form.routingNumber) }}
                {{ form_custom_errors.widget(form.routingNumber) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-12 cc-form-footer">
                {#TODO See additional condition#}
                {% if user.hasRole(constant('Erp\\UserBundle\\Entity\\User::ROLE_LANDLORD')) %}
                    <h3>Amount: ${{ amount }} /month</h3>
                {% else %}
                    <br/>
                {% endif %}
                {{ form_widget(form.submit) }}
                {% if user.hasRole(constant('Erp\\UserBundle\\Entity\\User::ROLE_TENANT')) %}
                    <span class="or-text">OR</span>
                    <a href="{{ path('erp_payment_ps_create_account', {'type' : cc}) }}" class="back-dashboard btn">Add Credit Card</a>
                {% endif %}
            </div>
        </div>
    </div>

    {% if not customer and user.hasRole(constant('Erp\\UserBundle\\Entity\\User::ROLE_LANDLORD')) and user.isActiveMonthlyFee %}
        <div class="row">
            <div class="form-group">
                <div class="col-xs-16"><br/>
                    <label for="">You will be charged eRentPay monthly fee starting from today.</label>
                </div>
            </div>
        </div>
    {% endif %}
{{ form_end(form) }}
