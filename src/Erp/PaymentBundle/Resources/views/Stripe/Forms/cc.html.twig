{% import '::widgets/form_errors.html.twig' as form_custom_errors %}

{{ form_start(form, {'action': path('erp_payment_ps_create_account', {'type': cc}), 'attr': {'class': 'form-horizontal cc-form', 'novalidate': 'novalidate'}}) }}
    <input type="hidden" name="action" value="save-credit-card">
    <div class="row">
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.number) }}
                {{ form_widget(form.number) }}
                {{ form_custom_errors.widget(form.number) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-4">
                {{ form_label(form.expMonth) }}
                <div class="select-container">
                    {{ form_widget(form.expMonth) }}
                </div>
                {{ form_custom_errors.widget(form.expMonth) }}
            </div>
            <div class="col-xs-4">
                {{ form_label(form.expYear) }}
                <div class="select-container">
                    {{ form_widget(form.expYear) }}
                </div>
                {{ form_custom_errors.widget(form.expYear) }}
            </div>
            <div class="col-xs-4">
                {{ form_label(form.cvc) }}
                <div class="select-containear">
                    {{ form_widget(form.cvc) }}
                </div>
                {{ form_custom_errors.widget(form.cvc) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-12 cc-form-footer">
                <br/>
                {{ form_widget(form.submit) }}
                {#<span class="or-text">OR</span>#}
                {#<a href="{{ path('erp_payment_ps_create_account', {'type' : ba}) }}" class="back-dashboard btn">Add Bank Account</a>#}
            </div>
        </div>
    </div>
{{ form_end(form) }}