<div class="row">
    <div class="col-xs-12">
        {% if pagination|length %}
        <ul class="accounting-table-title">
            <li>
                <span class="col-xs-3 bold-text">Name</span>
                <span class="col-xs-3 bold-text">Phone</span>
                <span class="col-xs-3 bold-text">Email</span>
                <span class="col-xs-3 bold-text">Address one</span>
            </li>
            {% for landlord in pagination %}
                <li>
                    <span class="col-xs-3 text">{{ landlord.firstname }} {{ landlord.lastname }}</span>
                    <span class="col-xs-3 text">{{ landlord.phone }}</span>
                    <span class="col-xs-3 text">{{ landlord.email }}</span>
                    <span class="col-xs-3 text">{{ landlord.addressOne }}</span>
                </li>
            {% endfor %}
        </ul>
        {% else %}
        <div class="text-center">
            You have no landlords yet.
            <div class="col-xs-12 text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
        {% endif %}
    </div>
    <hr>

    <div class="question-mark">

    </div>
</div>

