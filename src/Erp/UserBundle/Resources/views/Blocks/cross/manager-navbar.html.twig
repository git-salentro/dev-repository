<div class="collapse navbar-collapse white-navbar" id="secondary-profile-navbar">
    <ul class="nav navbar-nav">
        <li class="menu-item{{ currentRoute == 'erp_user_dashboard_dashboard' ? ' current' : ''}}">
            <span class="secondary-menu-icon dashboard-icon"></span>
            <a href="{{ path('erp_user_dashboard_dashboard') }}">Dashboard</a>
        </li>
        {% set availRoutes = ['erp_property_listings_all', 'erp_property_listings_add', 'erp_property_listings_edit'] %}

        <li class="menu-item{{ (currentRoute in availRoutes) ? ' current' : ''}}">
            <span class="secondary-menu-icon listings-icon"></span>
            <a href="{{ path('erp_property_listings_all') }}">Listings</a>
        </li>
        <li class="menu-item{{ currentRoute == 'erp_user_accounting_index' ? ' current' : ''}}">
            <span class="secondary-menu-icon accounting-icon"></span>
            <a href="{{ path('erp_user_accounting_index') }}">Accounting</a>
        </li>

        <li class="menu-item{{ currentRoute == 'erp_user_documentation' ? ' current' : ''}}">
            <span class="secondary-menu-icon documentation-icon"></span>
            <a href="{{ path('erp_user_documentation') }}">Documentation</a>
        </li>
        <li class="menu-item{{ currentRoute == 'erp_user_service_request' ? ' current' : ''}}">
            <span class="secondary-menu-icon service-icon"></span>
            <a href="{{ path('erp_user_service_request') }}">Service Requests</a>
        </li>
        <li class="menu-item{{ currentRoute == 'erp_user_profile_forum_index' ? ' current' : ''}}">
            <span class="secondary-menu-icon forum-icon"></span>
            <a href="{{ path('erp_user_profile_forum_index') }}">Manager Forum</a>
        </li>
        <li class="menu-item{{ currentRoute == 'erp_user_settings' ? ' current' : ''}}">
            <span class="secondary-menu-icon settings-icon"></span>
            <a href="{{ path('erp_user_settings') }}">Settings</a>
        </li>
        <li class="menu-item{{ currentRoute == 'fos_user_profile_show' ? ' current' : ''}}">
            <span class="secondary-menu-icon profile-icon"></span>
            <a href="{{ path('erp_user_profile_dashboard') }}">Profile</a>
        </li>
        <li class="menu-item{{ currentRoute == 'erp_user_messages' ? ' current' : ''}}">
            <span class="secondary-menu-icon messages-icon"></span>
            {% if count_unread_messages(user) %}
                <div class="messages-count-icon">
                    <span class="messages-count">{{ count_unread_messages(user) }}</span>
                </div>
            {% endif %}
            <a href="{{ path('erp_user_messages') }}">Messages</a>
        </li>
    </ul>
</div>
