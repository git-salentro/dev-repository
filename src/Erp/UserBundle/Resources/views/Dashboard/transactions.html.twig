<div class="col-md-12 col-xs-6 profile-widget-item widget-last">
    <div class="row widget-title-row">
        <div class="login-block-title bold-text">Payment History</div>
    </div>
    <div class="history-block">
        <div class="payment-history">
            <ul class="payment-table-title">
                <li>
                    <span class="col-xs-2 bold-text">Date</span>
                    <span class="col-xs-1 bold-text amount-col">Amount</span>
                    <span class="col-xs-1 bold-text amount-col">Currency</span>
                    <span class="col-xs-2 bold-text amount-col">From</span>
                    <span class="col-xs-2 bold-text amount-col">To</span>
                    <span class="col-xs-2 bold-text amount-col">Payment Method</span>
                </li>
            </ul>
            <ul class="payment-table">
                {% for transaction in pagination %}
                    {%- set sender -%}
                        {{ transaction.customer.user.email }}
                    {%- endset -%}

                    {%- set recipient -%}
                        {% if transaction.account %}
                            {{ transaction.account.user.email }}
                        {% else %}
                            System
                        {% endif %}
                    {%- endset -%}

                    {%- set payment_method -%}
                        {% if transaction.paymentMethod == constant('Erp\\StripeBundle\\Entity\\Transaction::BANK_ACCOUNT_PAYMENT_METHOD') %}
                            Bank Account
                        {% elseif transaction.paymentMethod == constant('Erp\\StripeBundle\\Entity\\Transaction::CREDIT_CARD_PAYMENT_METHOD') %}
                            Credit Card
                        {% endif %}
                    {%- endset -%}
                    <li>
                        <span class="col-xs-2">{{ transaction.created|date('Y/m/d') }}</span>
                        <span class="col-xs-1 amount-col">{{ transaction.amount }}</span>
                        <span class="col-xs-1 amount-col">{{ transaction.currency }}</span>
                        <span class="col-xs-2 amount-col">{{ sender }}</span>
                        <span class="col-xs-2 amount-col">{{ recipient }}</span>
                        <span class="col-xs-2 amount-col">{{ payment_method }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>