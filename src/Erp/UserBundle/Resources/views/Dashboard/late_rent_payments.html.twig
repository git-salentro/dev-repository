            <ul class="payment-table">
                <li>
                    <span class="col-xs-6 bold-text">Tenant</span>
                    {#<span class="col-xs-3 bold-text amount-col">Address</span>#}
                    {#<span class="col-xs-2 bold-text amount-col">Type</span>#}
                    <span class="col-xs-2 bold-text amount-col">Amount Owed</span>
                    <span class="col-xs-2 bold-text amount-col">Days Late</span>
                </li>
            {% for id, items in prepared %}
                {% set action = path('erp_user_user_allow_rent_payment', {'user': id}) %}
                {% set popupUrl = path('erp_user_late_rent_payment_create', {'user': id}) %}
                <li>
                    <span class="col-xs-6">
                        {{ items[0].user.fullName }} <a style="color: #b7b7b7;text-decoration: underline;" href="{{ path('erp_user_late_rent_payment_create', {'user': items[0].user.id}) }}" role="popup">Add Fee</a>
                    </span>
                    {#<span class="col-xs-3 amount-col"></span>#}
                    {#<span class="col-xs-2 amount-col"></span>#}
                    <span class="col-xs-2 amount-col"></span>
                    <span class="col-xs-2 amount-col"></span>
                    <div class="payment-table_note">
                        <span class="col-xs-6">
                            {{ form_start(form, {'action': action}) }}
                                <div>
                                     {{ form_label(form.allowRentPayment) }}
                                    <input type="checkbox" name="{{ form.allowRentPayment.vars.full_name }}" {% if items[0].user.allowRentPayment %}checked="checked"{% endif %}>
                                </div>
                                <div>
                                     {{ form_label(form.allowPartialPayment) }}
                                    <input type="checkbox" name="{{ form.allowPartialPayment.vars.full_name }}" {% if items[0].user.allowPartialPayment %}checked="checked"{% endif %}>
                                </div>
                            {{ form_end(form, {'render_rest': false}) }}
                        </span>
                    </div>
                </li>
                {% for item in items %}
                    <li>
                         <span class="col-xs-2 amount-col">
                            <form method="POST" action="{{ path('erp_user_late_rent_payment_remove', {'id': item.id }) }}" style="display: inline">
                                {#<button class="btn edit-btn payment-table_btn" type="submit">Remove</button>#}
                                <a class="delete-btn red-btn-color" role="popup" href="/app_dev.php/listings/232/delete/tenant">X</a>
                            </form>
                            21/05/16
                        </span>
                        <span class="col-xs-3 amount-col align-center">Late rent payment</span>
                        <span class="col-xs-2 amount-col align-left">$200</span>

                        {#<span class="col-xs-3 amount-col">{{ item.user.tenantProperty.address }}</span>#}
